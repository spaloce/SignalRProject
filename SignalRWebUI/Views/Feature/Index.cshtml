@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Index</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkan Alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Öne Çıkan Alan Title1</th>
                                    <th scope="col">Öne Çıkan Alan Açıklama1</th>
                                    <th scope="col">Öne Çıkan Alan Title2</th>
                                    <th scope="col">Öne Çıkan Alan Açıklama2</th>
                                    <th scope="col">Öne Çıkan Alan Title3</th>
                                    <th scope="col">Öne Çıkan Alan Açıklama3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureId</td>
                                        <td>@item.Title1</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Title2</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Title3</td>
                                        <td>@item.Description3</td>
                                        <td>
                                            <a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-primary btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
