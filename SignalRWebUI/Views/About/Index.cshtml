@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımızda alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Hakkımızda Title</th>
                                    <th scope="col">Hakkımızda Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-primary btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count == 1)
                        {
                            <a href="/About/UpdateAbout/@Model.First().AboutId" class="btn btn-primary btn-sm">Hakkımızda Yazısını Güncelle</a>
                        }
                        else
                        {
                            <a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

