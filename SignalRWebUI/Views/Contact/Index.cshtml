@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Lokasyon Bilgisi</th>
                                    <th scope="col">Telefon No</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td>
                                            <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-primary btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count == 1)
                        {
                            <a href="/Contact/UpdateContact/@Model.First().ContactId" class="btn btn-primary btn-sm">İletişim Bilgisini Güncelle</a>
                        }
                        else
                        {
                            <a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Bilgisi Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



