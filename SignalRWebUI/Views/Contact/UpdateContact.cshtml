@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Ekleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="ContactId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">İletişim Lokasyonu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                            <div class="form-group">
                                <label for="phone">İletişim Telefon No Giriniz</label>
                                <input type="tel" class="form-control" asp-for="Phone" id="phone"/>
                            </div>
                            <div class="form-group">
                                <label for="mail">İletişim Mail Adresi Giriniz</label>
                                <input type="text" class="form-control" asp-for="Mail" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="description">İletişim Açıklama Alanı Giriniz</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="FooterDescription" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgisi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>




