@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Sosyal Medya Title Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="ıcon">Sosyal Medya Icon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="ıcon">
                            </div>
                            <div class="form-group">
                                <label for="url">Sosyal Medya Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="url">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



