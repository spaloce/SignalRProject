@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sosyal Medya Title</th>
                                    <th scope="col">Sosyal Medya Icon</th>
                                    <th scope="col">Sosyal Medya Url</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Icon</td>
                                        <td>@item.Url</td>
                                        <td>
                                            <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-primary btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count == 1)
                        {
                            <a href="/SocialMedia/UpdateSocialMedia/@Model.First().SocialMediaId" class="btn btn-primary btn-sm">Sosyal Medya Yazısını Güncelle</a>
                        }
                        else
                        {
                            <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

