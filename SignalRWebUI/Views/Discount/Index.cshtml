@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimleri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>
                                            <a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-warning btn-sm">Durumu</a>
                                        </td>
                                        <td>
                                            <a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-primary btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count == 2)
                        {
                            <div class="card-sub">
                                Günlük Ürün İndirimleri Girilmiş Durumda.
                            </div>
                        }
                        else
                        {
                            <a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni Günün İndirimleri Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

