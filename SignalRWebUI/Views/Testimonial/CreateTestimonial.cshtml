@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Referans Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Referans Title Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="comment">Referans Comment Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Referans Resim Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Referans Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



